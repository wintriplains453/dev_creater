# Указываем базовый образ с поддержкой Go
FROM golang:1.20 AS builder

# Устанавливаем рабочую директорию внутри контейнера
WORKDIR /app

# Копируем файлы go.mod и go.sum для установки зависимостей
COPY go.mod go.sum ./

# Устанавливаем зависимости
RUN go mod download

# Копируем остальные файлы приложения
COPY . .

# Собираем бинарный файл приложения
RUN go build -o main .

# Указываем минимальный базовый образ для запуска
FROM debian:bullseye-slim

# Устанавливаем переменную окружения для указания местоположения бинарного файла
WORKDIR /app

# Копируем бинарный файл из этапа сборки
COPY --from=builder /app/main .

# Указываем порт, который слушает приложение (по необходимости)
EXPOSE 8080

# Команда для запуска приложения
CMD ["./main"]
